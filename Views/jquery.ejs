    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="col-12" id="first-div">
                    <div class="register">
                        <form action="/registerU" method="post">
                            <h3>User Register</h3>
                            <label for="fname">First name:</label>
                            <input type="text" id="fname" name="userName" required><br><br>
                            
                            <label for="Email">Email:</label>
                            <input class="reg" type="email" id="Email" name="email"><br><br>
                            
                            <label for="Contact">Contact:</label>
                            <input class="reg1" type="text" id="Contact" name="phone"><br><br>
                            
                            <label for="zaki">Password:</label>
                            <input class="reg2" type="password" id="zaki" name="password"><br><br>
                            
                            <input type="checkbox" onclick="myFunction()"> Show Password <br><br>
                            
                            <input type="submit" value="Submit">
                        </form>
                    </div>
                </div>
                <div class="col-12" id="first-second">
                    <form action="/login" method="post">
                        <h3>User Login</h3>

                        <label for="Email">Email ID:</label>
